{
  "info": {
    "name": "Notification Collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.accessToken) {",
                  "    pm.collectionVariables.set(\"accessToken\", jsonData.data.accessToken);",
                  "    console.log(\"Access Token set successfully\");",
                  "} else if (jsonData.accessToken) {",
                  "    pm.collectionVariables.set(\"accessToken\", jsonData.accessToken);",
                  "    console.log(\"Access Token set successfully\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"email\": \"test@example.com\",\n    \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Devices",
      "item": [
        {
          "name": "Register Device",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"fcmToken\": \"your-fcm-token-here\",\n    \"platform\": \"android\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/notifications/devices/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "devices", "register"]
            }
          },
          "response": []
        },
        {
          "name": "Unregister Device",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications/devices/:tokenId",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "devices", ":tokenId"],
              "variable": [
                {
                  "key": "tokenId",
                  "value": "your-fcm-token-here"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Management",
      "item": [
        {
          "name": "Get Notifications",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications/unread-count",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "unread-count"]
            }
          },
          "response": []
        },
        {
          "name": "Mark As Read",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications/:id/read",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", ":id", "read"],
              "variable": [
                {
                  "key": "id",
                  "value": "notification-id"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Mark All As Read",
          "request": {
            "method": "PATCH",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications/read-all",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "read-all"]
            }
          },
          "response": []
        },
        {
          "name": "Delete Notification",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "notification-id"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Delete All Notifications",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Settings",
      "item": [
        {
          "name": "Get Settings",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/notifications/settings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "settings"]
            }
          },
          "response": []
        },
        {
          "name": "Update Settings",
          "request": {
            "method": "PATCH",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"emailNotifications\": true,\n    \"pushNotifications\": true,\n    \"promotionalNotifications\": false\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/api/notifications/settings",
              "host": ["{{baseUrl}}"],
              "path": ["api", "notifications", "settings"]
            }
          },
          "response": []
        }
      ]
    }
  ],
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    },
    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [""]
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    }
  ]
}
