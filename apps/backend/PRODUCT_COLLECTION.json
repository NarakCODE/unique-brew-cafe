    {
      "name": "Get Product Add-ons",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/products/:id/addons",
          "host": ["{{baseUrl}}"],
          "path": ["api", "products", ":id", "addons"],
          "variable": [
            {
              "key": "id",
              "value": "",
