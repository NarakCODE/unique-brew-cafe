{
  "info": {
    "name": "5. Admin & Config",
    "description": "Complete API collection for reports, configuration, and admin features",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "deliveryZoneId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Reports (Admin)",
      "item": [
        {
          "name": "Get Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/dashboard?startDate=2025-01-01&endDate=2025-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "dashboard"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        },
        {
          "name": "Get Sales Report",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/sales?startDate=2025-01-01&endDate=2025-12-31&groupBy=day&storeId=",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "sales"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                },
                {
                  "key": "groupBy",
                  "value": "day"
                },
                {
                  "key": "storeId",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Get Orders Report",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/orders?startDate=2025-01-01&endDate=2025-12-31&status=completed&storeId=",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "orders"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                },
                {
                  "key": "status",
                  "value": "completed"
                },
                {
                  "key": "storeId",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Get Product Performance",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/products?startDate=2025-01-01&endDate=2025-12-31&sortBy=revenue&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "products"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                },
                {
                  "key": "sortBy",
                  "value": "revenue"
                },
                {
                  "key": "limit",
                  "value": "20"
                }
              ]
            }
          }
        },
        {
          "name": "Get Revenue Analytics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/revenue?startDate=2025-01-01&endDate=2025-12-31&groupBy=month",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "revenue"],
              "query": [
                {
                  "key": "startDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                },
                {
                  "key": "groupBy",
                  "value": "month"
                }
              ]
            }
          }
        },
        {
          "name": "Export Report",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/reports/export?reportType=sales&format=csv&startDate=2025-01-01&endDate=2025-12-31",
              "host": ["{{baseUrl}}"],
              "path": ["reports", "export"],
              "query": [
                {
                  "key": "reportType",
                  "value": "sales"
                },
                {
                  "key": "format",
                  "value": "csv"
                },
                {
                  "key": "startDate",
                  "value": "2025-01-01"
                },
                {
                  "key": "endDate",
                  "value": "2025-12-31"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Configuration",
      "item": [
        {
          "name": "Get Public Config",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/config/app",
              "host": ["{{baseUrl}}"],
              "path": ["config", "app"]
            }
          }
        },
        {
          "name": "Get Delivery Zones",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/config/delivery-zones",
              "host": ["{{baseUrl}}"],
              "path": ["config", "delivery-zones"]
            }
          }
        },
        {
          "name": "Get Health Status",
          "request": {
            "auth": {
              "type": "noauth"
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/config/health",
              "host": ["{{baseUrl}}"],
              "path": ["config", "health"]
            }
          }
        },
        {
          "name": "Update App Config (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"maintenanceMode\": false,\n  \"minAppVersion\": \"1.0.0\",\n  \"features\": {\n    \"loyalty\": true,\n    \"referrals\": true,\n    \"giftCards\": false\n  },\n  \"settings\": {\n    \"maxCartItems\": 20,\n    \"orderCancellationWindow\": 5,\n    \"defaultTaxRate\": 0.08\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/config/app",
              "host": ["{{baseUrl}}"],
              "path": ["config", "app"]
            }
          }
        },
        {
          "name": "Create Delivery Zone (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Downtown\",\n  \"description\": \"Downtown delivery zone\",\n  \"coordinates\": [\n    {\n      \"latitude\": 40.7128,\n      \"longitude\": -74.0060\n    },\n    {\n      \"latitude\": 40.7200,\n      \"longitude\": -74.0100\n    }\n  ],\n  \"deliveryFee\": 2.99,\n  \"minimumOrder\": 10.00,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/config/delivery-zones",
              "host": ["{{baseUrl}}"],
              "path": ["config", "delivery-zones"]
            }
          }
        },
        {
          "name": "Update Delivery Zone (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Downtown Updated\",\n  \"deliveryFee\": 3.99,\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/config/delivery-zones/{{deliveryZoneId}}",
              "host": ["{{baseUrl}}"],
              "path": ["config", "delivery-zones", "{{deliveryZoneId}}"]
            }
          }
        },
        {
          "name": "Delete Delivery Zone (Admin)",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/config/delivery-zones/{{deliveryZoneId}}",
              "host": ["{{baseUrl}}"],
              "path": ["config", "delivery-zones", "{{deliveryZoneId}}"]
            }
          }
        }
      ]
    }
  ]
}
