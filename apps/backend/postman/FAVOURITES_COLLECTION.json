{
  "info": {
    "_postman_id": "favorites-api-collection",
    "name": "Favorites API",
    "description": "API endpoints for managing user favorites (wishlist) in Corner Coffee app. Allows users to save their favorite products for quick access.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Get All Favorites",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 200', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test('Response has success true', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.be.true;",
              "});",
              "",
              "pm.test('Response contains favorites array', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('favorites');",
              "    pm.expect(jsonData.data.favorites).to.be.an('array');",
              "});",
              "",
              "pm.test('Response contains count', function () {",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('count');",
              "    pm.expect(jsonData.data.count).to.be.a('number');",
              "});",
              "",
              "if (pm.response.json().data.favorites.length > 0) {",
              "    pm.test('Favorite item has required fields', function () {",
              "        const favorite = pm.response.json().data.favorites[0];",
              "        pm.expect(favorite).to.have.property('favoriteId');",
              "        pm.expect(favorite).to.have.property('productId');",
              "        pm.expect(favorite).to.have.property('name');",
              "        pm.expect(favorite).to.have.property('slug');",
              "        pm.expect(favorite).to.have.property('basePrice');",
              "        pm.expect(favorite).to.have.property('currency');",
              "        pm.expect(favorite).to.have.property('isAvailable');",
              "        pm.expect(favorite).to.have.property('favoritedAt');",
              "    });",
              "    ",
              "    // Save first productId for other requests",
              "    pm.collectionVariables.set('productId', pm.response.json().data.favorites[0].productId);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
