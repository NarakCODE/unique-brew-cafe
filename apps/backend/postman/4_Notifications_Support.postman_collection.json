            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"user123\",\n  \"title\": \"Order Update\",\n  \"message\": \"Your order is ready for pickup\",\n  \"type\": \"order\",\n  \"data\": {\n    \"orderId\": \"order123\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/notifications/send",
              "host": ["{{baseUrl}}"],
              "path": ["notifications", "send"]
