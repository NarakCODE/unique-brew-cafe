            "body": {
              "mode": "raw",
              "raw": "{\n  \"segment\": \"premium_users\",\n  \"title\": \"Exclusive Offer\",\n  \"message\": \"Get 20% off on your next order\",\n  \"type\": \"promotion\"\n}"
