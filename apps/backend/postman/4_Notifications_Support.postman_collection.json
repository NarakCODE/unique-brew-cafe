              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Holiday Special Offer\",\n  \"content\": \"Get 25% off all beverages this weekend!\",\n  \"type\": \"promotion\",\n  \"priority\": \"high\",\n  \"startDate\": \"2025-12-20T00:00:00Z\",\n  \"endDate\": \"2025-12-22T23:59:59Z\",\n  \"isPublished\": true,\n  \"targetAudience\": \"all\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/announcements",
              "host": ["{{baseUrl}}"],
