{
  "info": {
    "name": "3. Shopping & Orders",
    "description": "Complete API collection for favorites, cart, checkout, payments, and orders",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{accessToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000/api",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "productId",
      "value": "",
      "type": "string"
    },
    {
      "key": "cartItemId",
      "value": "",
      "type": "string"
    },
    {
      "key": "checkoutId",
      "value": "",
      "type": "string"
    },
    {
      "key": "orderId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Favorites",
      "item": [
        {
          "name": "Get All Favorites",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/favorites",
              "host": ["{{baseUrl}}"],
              "path": ["favorites"]
            }
          }
        },
        {
          "name": "Add to Favorites",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/favorites/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["favorites", "{{productId}}"]
            }
          }
        },
        {
          "name": "Remove from Favorites",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/favorites/{{productId}}",
              "host": ["{{baseUrl}}"],
              "path": ["favorites", "{{productId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Cart",
      "item": [
        {
          "name": "Get Cart",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Add Item to Cart",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"productId\": \"{{productId}}\",\n  \"quantity\": 2,\n  \"size\": \"Medium\",\n  \"customizations\": [\n    {\n      \"name\": \"Sugar\",\n      \"value\": \"2 spoons\"\n    }\n  ],\n  \"addons\": [\n    {\n      \"addonId\": \"addon123\",\n      \"quantity\": 1\n    }\n  ],\n  \"notes\": \"Extra hot please\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/items",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "items"]
            }
          }
        },
        {
          "name": "Update Cart Item Quantity",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quantity\": 3\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/items/{{cartItemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "items", "{{cartItemId}}"]
            }
          }
        },
        {
          "name": "Remove Item from Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cart/items/{{cartItemId}}",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "items", "{{cartItemId}}"]
            }
          }
        },
        {
          "name": "Clear Cart",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cart",
              "host": ["{{baseUrl}}"],
              "path": ["cart"]
            }
          }
        },
        {
          "name": "Validate Cart",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cart/validate",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "validate"]
            }
          }
        },
        {
          "name": "Set Delivery Address",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"addressId\": \"address123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/address",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "address"]
            }
          }
        },
        {
          "name": "Set Cart Notes",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Please deliver to back entrance\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/cart/notes",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "notes"]
            }
          }
        },
        {
          "name": "Get Cart Summary",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/cart/summary",
              "host": ["{{baseUrl}}"],
              "path": ["cart", "summary"]
            }
          }
        }
      ]
    },
    {
      "name": "Checkout",
      "item": [
        {
          "name": "Validate Checkout",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkout/validate",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "validate"]
            }
          }
        },
        {
          "name": "Create Checkout Session",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('checkoutId', response.data.checkoutId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"storeId\": \"store123\",\n  \"pickupTime\": \"2025-12-07T15:00:00Z\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/checkout",
              "host": ["{{baseUrl}}"],
              "path": ["checkout"]
            }
          }
        },
        {
          "name": "Get Checkout Session",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkout/{{checkoutId}}",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "{{checkoutId}}"]
            }
          }
        },
        {
          "name": "Get Payment Methods",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkout/payment-methods",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "payment-methods"]
            }
          }
        },
        {
          "name": "Apply Coupon",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"couponCode\": \"SAVE10\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/checkout/{{checkoutId}}/apply-coupon",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "{{checkoutId}}", "apply-coupon"]
            }
          }
        },
        {
          "name": "Remove Coupon",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkout/{{checkoutId}}/remove-coupon",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "{{checkoutId}}", "remove-coupon"]
            }
          }
        },
        {
          "name": "Get Delivery Charges",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkout/delivery-charges?storeId=store123&addressId=address123",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "delivery-charges"],
              "query": [
                {
                  "key": "storeId",
                  "value": "store123"
                },
                {
                  "key": "addressId",
                  "value": "address123"
                }
              ]
            }
          }
        },
        {
          "name": "Confirm Checkout",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('orderId', response.data.orderId);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentMethodId\": \"pm_card_visa\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/checkout/{{checkoutId}}/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["checkout", "{{checkoutId}}", "confirm"]
            }
          }
        }
      ]
    },
    {
      "name": "Payments",
      "item": [
        {
          "name": "Create Payment Intent",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payments/{{orderId}}/intent",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "{{orderId}}", "intent"]
            }
          }
        },
        {
          "name": "Confirm Payment",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"paymentIntentId\": \"pi_123456789\",\n  \"paymentMethodId\": \"pm_card_visa\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/payments/{{orderId}}/confirm",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "{{orderId}}", "confirm"]
            }
          }
        },
        {
          "name": "Mock Payment Complete (Dev)",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/payments/mock/{{orderId}}/complete",
              "host": ["{{baseUrl}}"],
              "path": ["payments", "mock", "{{orderId}}", "complete"]
            }
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "Get All Orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders?page=1&limit=20&status=pending",
              "host": ["{{baseUrl}}"],
              "path": ["orders"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "20"
                },
                {
                  "key": "status",
                  "value": "pending"
                }
              ]
            }
          }
        },
        {
          "name": "Get Order by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}"]
            }
          }
        },
        {
          "name": "Get Order Tracking",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/tracking",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "tracking"]
            }
          }
        },
        {
          "name": "Get Order Invoice",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/invoice",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "invoice"]
            }
          }
        },
        {
          "name": "Cancel Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reason\": \"Changed my mind\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/cancel",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "cancel"]
            }
          }
        },
        {
          "name": "Rate Order",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 5,\n  \"review\": \"Excellent service and great coffee!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/rate",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "rate"]
            }
          }
        },
        {
          "name": "Reorder",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/reorder",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "reorder"]
            }
          }
        },
        {
          "name": "Get Order Receipt (Admin)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/receipt",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "receipt"]
            }
          }
        },
        {
          "name": "Add Internal Notes (Admin)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Customer called to confirm pickup time\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/notes",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "notes"]
            }
          }
        },
        {
          "name": "Update Order Status (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"preparing\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/status",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "status"]
            }
          }
        },
        {
          "name": "Assign Driver (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"driverId\": \"driver123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/orders/{{orderId}}/assign",
              "host": ["{{baseUrl}}"],
              "path": ["orders", "{{orderId}}", "assign"]
            }
          }
        }
      ]
    }
  ]
}
