    "@types/pdfkit": "^0.17.3",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.0.0",
    "mongodb-memory-server": "^10.3.0",
    "prettier": "^3.0.0",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.0.0",
