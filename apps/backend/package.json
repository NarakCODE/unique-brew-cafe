  "type": "module",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "seed:admin": "tsx src/seeders/adminSeeder.ts",
    "seed:store": "tsx src/seeders/storeSeeder.ts",
    "seed:categories": "tsx src/seeders/categorySeeder.ts",
    "seed:products": "tsx src/seeders/productSeeder.ts",
    "seed:promos": "tsx src/seeders/promoCodeSeeder.ts",
    "seed:faqs": "tsx src/seeders/faqSeeder.ts",
    "seed:config": "tsx src/seeders/appConfigSeeder.ts",
    "seed:zones": "tsx src/seeders/deliveryZoneSeeder.ts",
    "seed:all": "npm run seed:admin && npm run seed:store && npm run seed:categories && npm run seed:products && npm run seed:promos && npm run seed:faqs && npm run seed:config && npm run seed:zones"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@getbrevo/brevo": "^3.0.1",
    "@types/multer": "^2.0.0",
