    "dotenv": "^16.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.0.0",
    "helmet": "^8.0.0",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongodb-mcp-server": "^1.2.0",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pdfkit": "^0.17.2",
    "slugify": "^1.6.6",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@tsconfig/node22": "^22.0.2",
    "@types/bcrypt": "^6.0.0",
    "@types/compression": "^1.7.5",
